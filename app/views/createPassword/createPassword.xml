<Page loaded="pageLoaded">
  <ActionBar id="actionBar" title="FAB Wallet" class="action-bar" ></ActionBar> 
  <!-- Your UI components go here -->

  <ScrollView orientation="vertical">
<!--<StackLayout orientation="vertical" verticalAlignment="center"  >-->
<StackLayout orientation="vertical"  >
<Label class="h1 mh10 center" editable="false" id="title" text="Create A Secure Password" textWrap="true" ></Label>
<Label class="h4 mh10 center" editable="false" id="text1"  text="Your password is a key to your wallet.  Kindly create a secure password." textWrap="true" /> 
 <!--<Label class="h4 mh10 center" editable="false" textWrap="true" color="rgb(140,0,0)"  style="margin-bottom:5%" text="If you forget your password, you will loose the access to your funds forever."/> -->

<label textWrap="true" id="lenCheck" class="h5 mh10 center"  color="red" text="The Password must be atleast 8 characters long."/>
<label textWrap="true" id="spaceCheck" class="h5 mh10 center"  color="red" text="There should be no space."/>
<label textWrap="true" id="spCharCheck"  class="h5 mh10 center"  color="red" text="The Password must contain atleast one special charecter."/>
<label textWrap="true" id="numCheck" class="h5 mh10 center" color="red" text="The password must contain atleast one number."/>

<TextField text="{{ password }}" id="password" class="mh10"  secure="true" returnKeyType="done" returnPress="nextClicked" hint="Create Password..." />

<Button class="btn btn-outline btn-rounded-lg" id="nextBtn"   text="Next " tap="nextClicked" />

</StackLayout>
</ScrollView>
</Page>
