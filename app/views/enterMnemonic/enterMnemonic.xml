<Page loaded="pageLoaded">
  <ActionBar id="actionBar" title="FAB Wallet" class="action-bar" ></ActionBar> 



<StackLayout id="myStack"  orientation="vertical" verticalAlignment="top"  >

<Label class="h3 mh10 center" id="title" editable="false" text="Enter Mnemonic" textWrap="true" ></Label>
<!--<Label class="h4 mh10 center" editable="false" style="margin-bottom:10%" text="No Wallet Information was found. Kindly create a password to set up your wallet." textWrap="true" ></Label>-->

<Label class="h6 mh10 center" editable="false" style="margin-bottom:10%" id="text1" text="Kindly Enter the Mnemonic words in order in the given fields. Keep in mind that these words are case sensitive." textWrap="true" ></Label>
<!--<Label class="h3 mh10" editable="false" text="{{txt}}" textWrap="true" ></Label>-->


<!--<Button class="btn btn-outline btn-rounded-lg" id="btn" text="Create Password" tap="onButtonTap" />-->
<GridLayout id="myGrid" rows="auto auto auto auto auto auto">

<StackLayout class="mh5" orientation="horizontal" row="0" >
<TextField id="mw1"  width="48%" autocapitalizationType="none" style="color:black; padding:5px;" height="50" class="h3" row="0" col="0" secure="false" hint="1st Word" />
