</StackLayout>
<StackLayout class="mh5" orientation="horizontal" row="2">
<TextField id="mw5"  width="48%" autocapitalizationType="none" style="color:black;" height="50" class="h3" row="0" col="0" secure="false" hint="5th Word" />
<TextField id="mw6" width="48%" autocapitalizationType="none" style="color:black;" height="50" class="h3" row="0" col="1" secure="false" hint="6th Word" />
</StackLayout>
<StackLayout class="mh5" orientation="horizontal" row="3">
<TextField id="mw7"  width="48%" autocapitalizationType="none" style="color:black;" height="50" class="h3" row="0" col="0" secure="false" hint="7th Word" />
<TextField id="mw8" width="48%" autocapitalizationType="none" style="color:black;" height="50" class="h3" row="0" col="1" secure="false" hint="8th Word" />
